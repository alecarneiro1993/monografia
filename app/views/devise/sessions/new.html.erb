<%= render 'devise/shared/logo' %>
<div class="row row-mt">
  <div class="container-fluid">
    <div class="row">
      <div class="panel_container col-xs-4 col-xs-offset-4">
        <div id="panel_user" class="panel panel-default devise-bs">
          <div class="panel-body">
            <%= render 'devise/shared/errors' %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="checkbox">
              <%= f.label :remember_me do %>
              <%= f.check_box :remember_me %>
              <%= t('.remember_me', default: 'Remember me') %>
              <% end %>
              <%= render 'devise/shared/links' %>
            </div>
            <%= f.submit  t('.sign_in', default: 'Sign in'), id: 'auth-btn', class: 'btn btn-primary' %>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
