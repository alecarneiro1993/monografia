<% if !flash.empty? %>
<div class="alert alert-danger alert-block devise-bs">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <h5><%= flash.count %>
    errors prohibited this user from being saved:</h5>
  <ul>
    <%- flash.each do |name, msg| -%>
    <%= content_tag :li, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <%- end -%>
  </ul>
</div>
<% end %>
